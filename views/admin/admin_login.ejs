<html>
<head>

</head>

<body>
  <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/login_style.css">
  <script src="js/login_script.js"></script>

  <section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-xxl-11">
          <div class="card border-light-subtle shadow-sm">
            <div class="row g-0">
              <div class="col-12 col-md-6">
                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy"
                  src="assets/backgroud/login_bg.png" alt="Welcome back you've been missed!">
              </div>
              <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">

                <div class="col-12 col-lg-11 col-xl-10 pt-5">

                  <h1 class="newh"  style="margin-left: 2.5rem; ">ADMIN LOGIN</h1>
                  <div class="card-body p-3 p-md-4 p-xl-5">
                    
                    <form action="/admin/login" method="post">
                      <div class="row gy-3 overflow-hidden">
                        <div class="col-12">
                          <div class="form-floating mb-2">
                            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                            <label for="email" class="form-label">Email</label>
                          </div>
                        </div>
                        <div class="col-12">
                          <div class="form-floating">
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                            <label for="password" class="form-label">Password</label>
                          </div>
                        </div>
                        <div class="col-12 mb-2 text-end">
                          <a href="/forgot_password" class="text-decoration-none">Forgot password</a>
                        </div>
                        <div class="col-12">
                          <div class="d-grid">
                            <button class="btn btn-dark btn-lg" type="submit" aria-label="Log in">Log in now</button>
                          </div>
                        </div>
                      </div>
                    </form>


                    <div class="row">
                      <div class="social-icons pt-3">
                        <!-- <a href="/auth/google"><img src="assets/icons/google_logo.png" alt="Google" class="icon"></a> -->
                        <!-- <a href="/auth/facebook"><img src="assets/icons/facebook_logo.png" alt="Facebook" class="icon"></a> -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>