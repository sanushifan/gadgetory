<html>
<head>
  <link rel="icon" href="assets/icons/gadgetory-favicon.png" type="image/x-icon">
  <title>Gadgetory | Admin</title>

  <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="user/css/login_style.css">

  <!-- iziToast alert -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/izitoast/dist/css/iziToast.min.css">
  <script src="https://cdn.jsdelivr.net/npm/izitoast/dist/js/iziToast.min.js" defer></script>
  
  <style>
    .login-image {
      width: 50%;
      background: url('assets/backgroud/login_bg.png') no-repeat center;
      background-size: cover;
    }
    .login-heading{
      margin-top: 20px;
      font-size: 1.8rem;
      font-weight: 700;
      color: #1f1f1f; 
      text-align: center;
    }
  </style>
</head>

<body>


  <section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-10 col-xxl-9">
          <div class="card border-light-subtle shadow-sm">
            <div class="row g-0">
              
              <div class="login-image rounded-start col-12 col-md-6">
              </div>
              <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                <div class="col-12 col-lg-11 col-xl-10 pt-5">

                  <h1 class="login-heading">ADMIN LOGIN</h1>
                  <div class="card-body p-md-3 p-xl-4">
                    
                    <form onsubmit="loginForm(event)">
                      <div class="row gy-3 overflow-hidden">
                        <div class="col-12">
                          <div class="form-floating mb-2">
                            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                            <label for="email" class="form-label">Email</label>
                          </div>
                        </div>
                        <div class="col-12">
                          <div class="form-floating">
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                            <label for="password" class="form-label">Password</label>
                          </div>
                        </div>
                        <div class="col-12 mb-2 text-end">
                          <a href="/forgot_password" class="text-decoration-none">Forgot password</a>
                        </div>
                        <div class="col-12">
                          <div class="d-grid">
                            <button class="btn btn-dark btn-lg" type="submit" aria-label="Log in">Log in now</button>
                          </div>
                        </div>
                      </div>
                    </form>


                    <div class="row">
                      <div class="social-icons pt-3">
                        <!-- <a href="/auth/google"><img src="assets/icons/google_logo.png" alt="Google" class="icon"></a> -->
                        <!-- <a href="/auth/facebook"><img src="assets/icons/facebook_logo.png" alt="Facebook" class="icon"></a> -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>
<script src="admin/js/admin_login.js"></script>


</html>