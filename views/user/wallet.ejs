<script>
  document.getElementById('add-funds-form').addEventListener('submit', function(event) {
    event.preventDefault();
    
    const amount = document.getElementById('amount').value;
    if (amount && parseFloat(amount) > 0) {
        // Update balance
        const currentBalance = parseFloat(document.getElementById('balance').innerText);
        const newBalance = currentBalance + parseFloat(amount);
        document.getElementById('balance').innerText = newBalance.toFixed(2);

        // Add transaction to the list
        const transactionList = document.getElementById('transaction-list');
        const newTransaction = document.createElement('li');
        newTransaction.innerText = `₹${amount} added to wallet`;
        transactionList.appendChild(newTransaction);

        // Clear input field
        document.getElementById('amount').value = '';
    } else {
        alert('Please enter a valid amount!');
    }
});

</script>
