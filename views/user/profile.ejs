<%-include('partials/header')%>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="user/css/profile.css">


    <!-- Breadcrumb Section Begin -->

    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Profile</h4>
                        <div class="breadcrumb__links">
                            <a href="/homepage">Home</a>
                            <span>Profile</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- PRofile Section Begin -->
    <section class="profile_details">
        <div class="row">
            <div class="col-lg-12">
                <ul class="access_control">
                    <li id="profile-session" class="active" onclick="window.location.href='/profile'">My Profile</li>
                    <li id="address-session" onclick="window.location.href='/profile_address'">Address Book</li>
                </ul>
            </div>
        </div>
        <div id="profile-section" class=" content-section active">
            <div class="profile_container">
                <form id="personalInfoForm">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" id="firstName" value="<%=user?.first_name%>" disabled>
                            <small id="first_name_error" class="error-message">first name is required.</small>
                        </div>

                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" id="lastName" value="<%=user?.last_name%>" disabled>
                            <small id="last_name_error" class="error-message">last name is required.</small>

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" value="<%=user?.email%>" disabled>
                            <!-- <small id="" class="error-message">name is required.</small> -->

                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" value="<%=user?.phno_number%>" disabled>
                            <small id="phone_error" class="error-message">phone number is required.</small>
                        </div>
                    </div>
                    <div class="button-container">
                        <!-- Save & Cancel buttons for Personal Info form -->
                        <button type="button" class="cancel-btn" id="cancelPersonalBtn" onclick="cancelEdit('personal')"
                            style="display: none;">Cancel</button>
                        <button type="submit" class="save-btn" id="savePersonalBtn" style="display: none;">
                            Save Changes</button>
                    </div>
                </form>


                <!-- Password Section  -->
                <div class="password-section" id="passwordSection">
                    <form id="passwordForm">
                        <div class="form-group">
                            <label for="current_password">Current Password</label>
                            <input type="password" id="current_password">
                            <small id="current_password_error" class="error-message">Current Password is required.</small>

                        </div>
                        <div class="form-group">
                            <label for="new_password">New Password</label>
                            <input type="password" id="new_password">
                            <small id="new_password_error" class="error-message">New Password is required.</small>

                        </div>
                        <div class="form-group">
                            <label for="confirm_password">Confirm New Password</label>
                            <input type="password" id="confirm_password">
                            <small id="confirm_password_error" class="error-message">Confirm Password is required.</small>
                            <small id="not_match_error" class="error-message">Password is not match.</small>

                        </div>

                        <div class="forgotPassword">
                            <a href="">forgot Password</a>
                        </div>

                        <div class="button-container">
                            <!-- Save & Cancel buttons for Password form -->
                            <button type="button" class="cancel-btn" id="cancelPasswordBtn"
                                onclick="cancelEdit('password')">Cancel</button>
                            <button type="submit" class="save-btn" id="savePasswordBtn" style="display: none;">Save
                                Changes</button>
                        </div>
                    </form>
                </div>

                <!-- Edit Button -->
                <div class="button-container">
                    <button type="button" class="edit-btn" id="editButton" onclick="enableEditing()">Edit User</button>
                </div>
            </div>
        </div>


    </section>
    
    <script src="user/js/profile.js"></script>
    <!-- Profile Section End -->
    <%-include('partials/footer')%>



